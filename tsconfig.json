{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "lib/formatData.ts",
    "app/pageInterna/pagePerfil/formBody.tsx",
    "app/pageInterna/pagePerfil/page.tsx",
    "app/pageInterna/pagePerfil/alterarPerfil/page.tsx",
    "components/header.tsx",
    "app/novaSenha"
  ],
  "exclude": ["node_modules"]
}
